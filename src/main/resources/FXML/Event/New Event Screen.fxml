<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.Controller.NewEventController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TitledPane animated="false" prefHeight="399.0" prefWidth="640.0" text="New Event Setup">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Pane prefHeight="375.0" prefWidth="349.0">
                           <children>
                              <Text layoutX="14.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Event Type" />
                              <ChoiceBox fx:id="eventTypeSelection" layoutX="116.0" layoutY="35.0" prefWidth="150.0">
                                      <items>
                                          <FXCollections fx:factory="observableArrayList">
                                              <String fx:value="NEW E-Board Meeting Attendance"/>
                                              <String fx:value="NEW General Meeting Attendance"/>
                                              <String fx:value="NEW Event Attendance"/>
                                          </FXCollections>
                                      </items>
                              </ChoiceBox>
                              <Text layoutX="14.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Event Notes" />
                              <TextArea fx:id="eventNotesField" layoutX="104.0" layoutY="112.0" prefHeight="200.0" prefWidth="200.0" />
                              <Button fx:id="createEventBtn" layoutX="123.0" layoutY="336.0" onAction="#createEvent" mnemonicParsing="false" text="Create Event" />
                           </children>
                        </Pane>
                        <Pane layoutX="358.0" prefHeight="374.0" prefWidth="280.0">
                           <children>
                              <Button fx:id="homeBtn" layoutX="228.0" layoutY="2.0" mnemonicParsing="false" onAction="#returnHome" text="Home" />
                              <Text layoutX="14.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Event Title is autogenerated" />
                              <Text layoutX="15.0" layoutY="102.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Event Date is included with current system date" />
                           </children>
                        </Pane>
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
         </children>
    </AnchorPane>
  </children>
</VBox>
